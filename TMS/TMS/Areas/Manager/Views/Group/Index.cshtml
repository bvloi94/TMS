@model TMS.Models.Group
@{
    ViewBag.Title = "Group";
    Layout = "~/Areas/Manager/Views/Shared/_TopLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-body">
                <button type="button" class="btn btn-flat btn-primary" onclick="showCreateModal()"><i class="fa fa-plus"></i>&nbsp;New Group</button>
                <table class="table dataTable" id="group-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Group</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Name&nbsp;<span style="color: red">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Name" id="name-txt">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Description</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="3" placeholder="Description" id="description-txt"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Category</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="category-txt" data-role="ddl-category" multiple="multiple"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <p id="name-validation-message" class="text-danger" style="display: none"></p>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="create-btn" onclick="createGroup()">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<div class="modal" id="delete-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Are you sure?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="yes-btn"><i class="fa fa-check" aria-hidden="true"></i> Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> No</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@Styles.Render("~/Content/datatables")
@section scripts{
    @Scripts.Render("~/bundles/datatables")
    <script>
        $("#group-table").DataTable({
            processing: true,
            serverSide: true,
            paging: false,
            sort: false,
            filter: false,
            ajax: {
                url: "/Manager/Group/GetGroup"
            },
            "columnDefs": [
                {
                    "render": function (data, type, row) {
                        return row[1];
                    },
                    "targets": 0,
                    "type": "date"
                },
                {
                    "render": function (data, type, row) {
                        return row[2];
                    },
                    "targets": 1
                },
                {
                    "render": function (data, type, row) {
                        return '<a href="javascript:void(0)" class="btn btn-xs btn-primary" data-toggle="modal" onclick="getGroupDetail(\'' + row[0] + '\')"><i class="fa fa-pencil"></i></a>&nbsp;&nbsp;' +
                               '<a href="javascript:void(0)" class="btn btn-xs btn-primary" onclick="showDeleteModal(\'' + row[0] + '\')"><i class="fa fa-trash-o"></i></a>';
                    },
                    "targets": 2
                }
            ]
        });

        function initDropdownControl() {
            initCategoryDropdown({
                control: $("[data-role=ddl-category]"),
                ignore: function () {
                    return [];
                }
            });
        }

        var showCreateModal = function () {
            clearModal();
            initDropdownControl();
            $("#myModal").modal('show');
            $('#create-btn').attr('onclick', 'createGroup()');
        }

        var reloadDataTable = function () {
            var oTable = $("#group-table").dataTable();
            oTable._fnPageChange(0);
            oTable._fnAjaxUpdate();
        };

        var clearModal = function () {
            $("#myModal").find("input").val("");
            $("#myModal").find("textarea").val("");
            $("#category-txt").val(null);
            $(".text-danger").hide();
        }

        var createGroup = function () {
            $.ajax({
                url: "/Manager/Group/CreateGroup",
                type: "POST",
                dataTpye: "JSON",
                data: {
                    Name: $("#name-txt").val(),
                    Description: $("#description-txt").val(),
                    Categories: JSON.stringify($("#category-txt").val())
                },
                success: function (data) {
                    if (data.success) {
                        noty({
                            text: data.message,
                            layout: "topCenter",
                            type: "success",
                            timeout: 2000
                        });
                        $("#myModal").modal("hide");
                        reloadDataTable();
                    } else {
                        $("#name-validation-message").html(data.message);
                        $("#name-validation-message").show();
                        noty({
                            text: data.message,
                            type: "error",
                            layout: "topRight",
                            timeout: 2000
                        });
                    }
                },
                error: function () {
                    noty({
                        text: "Cannot connect to server!",
                        type: "error",
                        layout: "topRight",
                        timeout: 2000
                    });
                }
            });
        }

        var getGroupDetail = function (id) {
            clearModal();
            initDropdownControl();
            $.ajax({
                url: "/Manager/Group/GetGroupDetail",
                dataType: "json",
                type: "GET",
                data: {
                    id: id
                },
                success: function (data) {
                    if (data.success) {
                        $("#myModal").modal("show");
                        $("#name-txt").val(data.group.Name);
                        $("#description-txt").val(data.group.Description);
                        for (i = 0; i < data.group.GroupCategories.length; i++) {
                            loadInitDropdown('ddl-category', data.group.GroupCategories[i].Category, data.group.GroupCategories[i].Id);
                        }
                        $("#create-btn").attr("onclick", "editGroup('" + id + "')");
                    } else {
                        if (data.error) {
                            noty({
                                text: data.message,
                                type: "error",
                                layout: "topRight",
                                timeout: 2000
                            });
                        }
                    }
                },
                error: function () {
                    noty({
                        text: "Cannot connect to server!",
                        type: "error",
                        layout: "topRight",
                        timeout: 2000
                    });
                }
            });
        }

        var editGroup = function (id) {
            $.ajax({
                url: "/Manager/Group/EditGroup",
                dataType: "json",
                type: "POST",
                data: {
                    id: id,
                    Name: $("#name-txt").val(),
                    Description: $("#description-txt").val(),
                    Categories: JSON.stringify($("#category-txt").val())
                },
                success: function (data) {
                    if (data.success) {
                        noty({
                            text: data.message,
                            layout: "topCenter",
                            type: "success",
                            timeout: 2000
                        });
                        $("#myModal").modal("hide");
                        reloadDataTable();
                    } else {
                        $("#name-validation-message").html(data.message);
                        $("#name-validation-message").show();
                        noty({
                            text: data.message,
                            type: "error",
                            layout: "topRight",
                            timeout: 2000
                        });
                    }
                },
                error: function () {
                    noty({
                        text: "Cannot connect to server!",
                        type: "error",
                        layout: "topRight",
                        timeout: 2000
                    });
                }
            });
        }

        var showDeleteModal = function (id) {
            $("#yes-btn").attr("onclick", "deleteGroup('" + id + "')");
            $("#delete-modal").modal("show");
        };

        var deleteGroup = function (id) {
            $.ajax({
                url: "/Manager/Group/DeleteGroup",
                dataType: "json",
                type: "POST",
                data: { id: id },
                success: function (data) {
                    if (data.success) {
                        noty({
                            text: data.message,
                            layout: "topCenter",
                            type: "success",
                            timeout: 2000
                        });
                        $("#delete-modal").modal("hide");
                        reloadDataTable();
                    } else {
                        noty({
                            text: data.message,
                            type: "error",
                            layout: "topRight",
                            timeout: 2000
                        });
                        $("#delete-modal").modal("hide");
                    }
                },
                error: function () {
                    noty({
                        text: "Cannot connect to server!",
                        type: "error",
                        layout: "topRight",
                        timeout: 2000
                    });
                }
            });

        };

    </script>
}