                </div>
            </section>
            <div id="flash-message" class="alert alert-success" style="display: none">
                <i class="fa fa-check fa-2"></i>
            </div>
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.1.1
            </div>
            <strong>Copyright &copy; 2016-2016 <a href="http://tms.com">Group 4</a>.</strong> All rights
            reserved.
        </footer>
    </div>
    <!-- ./wrapper -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    <script>
        $.fn.flashMessage = function (options) {
            var target = this;
            options = $.extend({}, options, { timeout: 3000 });
            if (!options.message) {
                options.message = getFlashMessageFromCookie();
                deleteFlashMessageCookie();
            }
            if (options.message) {
                target.show();
                if (typeof options.message === "string") {
                    target.html("<span>" + options.message + "</span>");
                } else {
                    target.empty().append(options.message);
                }
            }

            if (!options.message) return;

            target.fadeIn().one("click", function () {
                $(this).fadeOut();
            });

            if (options.timeout > 0) {
                setTimeout(function () { target.fadeOut(); }, options.timeout);
            }

            return this;
        };

        var notifyFlashMessage = function (options) {
            options = $.extend({}, options, { timeout: 3000 });
            if (!options.message) {
                options.message = getFlashMessageFromCookie();
                deleteFlashMessageCookie();
            }
            if (options.message) {
                $.notify(options.message, "success");
            }
        };

        function getFlashMessageFromCookie() {
            return $.cookie("FlashMessage");
        }

        function deleteFlashMessageCookie() {
            $.removeCookie('FlashMessage', { path: '/' });
        }
        $(document).ready(function () {
            $(".datetime").datetimepicker({
                timepicker: false,
                format: 'd/m/Y'
            });
            //$("#flash-message").flashMessage();
            notifyFlashMessage();
            //$.validator.methods.date = function (value, element) {
            //    Globalize.culture("en-GB");
            //    return this.optional(element) || Globalize.parseDate(value) !== null;
            //};
            $.validator.addMethod("date", function (value, element) {
                Globalize.culture("en-GB");
                return this.optional(element) || Globalize.parseDate(value) !== null;
            });
        });
    </script>
</body>
</html>