@model TMS.ViewModels.ProfileAdminViewModel
@{
    ViewBag.Title = "Edit Admin Profile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditProfie", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form", area = "Admin", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-xs-8">
            <div class="box box-primary">
                <div class="box-body large-text-container">
                    @Html.AntiForgeryToken()
                    <!--Username-->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Username</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled="disabled" value="@ViewBag.Username" />
                        </div>
                    </div>
                    <!--Email-->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Email&nbsp;<span style="color: red">*</span></label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!--Fullname-->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Fullname&nbsp;<span style="color: red">*</span></label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!--Birthday-->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Birthday</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.DayOfBirth, "{0:dd/MM/yyyy}", new { @class = "form-control datetime" })
                            @Html.ValidationMessageFor(m => m.DayOfBirth, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!--Address-->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Address</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!--Phone-->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Phone</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!--gender-->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Gender</label>
                        <div class="col-sm-9">
                            @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>{
                                new SelectListItem{ Text = "Male", Value = "true"},
                                new SelectListItem{ Text = "Female", Value = "false"}
                            }, "--Choose gender--", new { @class = "form-control" })
                        </div>
                    </div>
                    <!--btnSave , btnCancel-->
                    <div class="form-group">
                        <div class="col-xs-offset-3 col-xs-9">
                            <input type="submit" class="btn btn-success" value="Save" />
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="box box-primary">
                <div class="box-body" style="text-align: center">
                    <span class="lead"><strong>Avatar</strong></span>
                    <br />
                    <img src="@ViewBag.AvatarURL" class="profile-avatar" alt="Avatar Image" id="avatar-img" />
                    <input type="file" id="Avatar" name="Avatar" accept="image/gif, image/jpeg, image/png" onchange="readURL(this);" />
                    @Html.ValidationMessageFor(m => m.Avatar, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
}

