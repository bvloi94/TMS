@model TMS.ViewModels.HelpDeskRegisterViewModel
@{
    ViewBag.Title = "Manage Help Desks";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/admin_css")
@using (Html.BeginForm("CreateHelpDesk", "ManageUser", FormMethod.Post, new { @class = "form-horizontal", role = "form", area = "Admin", enctype = "multipart/form-data" }))
{
    <div class="row" style="overflow: hidden">
        <div class="col-xs-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4 class="box-title">CREATE HELP DESK</h4>
                </div>
                <div class="box-body">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Email&nbsp;<span style="color: red">*</span></label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "email-txt" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Username&nbsp;<span style="color: red">*</span></label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", id = "username-txt" })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Fullname&nbsp;<span style="color: red">*</span></label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Fullname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Phone Number</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Birthday</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Birthday, new { @class = "form-control datetime" })
                            @Html.ValidationMessageFor(m => m.Birthday, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Address</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Gender</label>
                        <div class="col-sm-9">
                            @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>{
                                    new SelectListItem{ Text = "Male", Value = "true"},
                                    new SelectListItem{ Text = "Female", Value = "false"}
                                }, "--Choose gender--", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <input type="submit" class="btn btn-success" value="Save" />
                            @Html.ActionLink("Cancel", "HelpDesk", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="box box-primary">
                <div class="box-body" style="text-align: center">
                    <span class="lead"><strong>Avatar</strong></span>
                    <br />
                    <img src="~/Uploads/Avatar/avatar_male.png" class="profile-avatar" alt="Avatar Image" id="avatar-img" />
                    @Html.TextBoxFor(m => m.Avatar, new { type = "file", accept = "image/gif, image/jpeg, image/png", onchange = "readURL(this);" })
                    @Html.ValidationMessageFor(m => m.Avatar, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#email-txt").keyup(function () {
            $("#username-txt").val($("#email-txt").val());
        });
    </script>
}
