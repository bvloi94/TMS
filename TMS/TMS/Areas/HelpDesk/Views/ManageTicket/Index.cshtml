@model IEnumerable<TMS.Models.Ticket>
@{
    Layout = "~/Areas/HelpDesk/Views/Shared/_Layout.cshtml";
    //ViewBag.Title = "Ticket Management";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h4 class="box-title">Ticket Management</h4>
                <a class="btn btn-block bg-olive btn-flat pull-right" style="width: 135px;" href='@Url.Action("Create", "ManageTicket")' ">
                    Create New Ticket
                </a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table" id="ticket-table">
                    <thead>
                        <tr>
                            <th>
                                Subject
                            </th>
                            <th>
                                Requester Name
                            </th>
                            <th>
                                Assign To
                            </th>
                            <th>
                                Department
                            </th>
                            <th>
                                Solved Date
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Created Date
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

@Styles.Render("~/Content/datatables")
@section scripts{
    @Scripts.Render("~/bundles/datatables")
    <script>
        var ticketTable = null;
        setActiveTicketMenu();
        initTicketTable();

        function initTicketTable() {

            ticketTable = $("#ticket-table").DataTable({
                processing: true,
                serverSide: true,
                paging: true,
                sort: true,
                ajax: {
                    url: "/HelpDesk/ManageTicket/GetTickets"
                },
                "columnDefs": [
                    {
                        "render": function (data, type, row) {
                            return row[0];
                        },
                        "targets": 0
                    },
                    {
                        "render": function (data, type, row) {
                            return row[1];
                        },
                        "targets": 1
                    },
                    {
                        "render": function (data, type, row) {
                            return row[2];
                        },
                        "targets": 2
                    },
                    {
                        "render": function (data, type, row) {
                            return row[3];
                        },
                        "targets": 3
                    },
                    {
                        "render": function (data, type, row) {
                            return row[4];
                        },
                        "targets": 4
                    },
                    {
                        "render": function (data, type, row) {
                            return row[5];
                        },
                        "targets": 5
                    },
                    {
                        "render": function (data, type, row) {
                            return row[6];
                        },
                        "targets": 6,
                        "type": "date"
                    },

                    {
                        "render": function (data, type, row) {
                            var url = '@Url.Action("Edit", "ManageTicket")/' + row[7];
                            return "<a href='"+url+"'  class='btn btn-xs btn-primary btn-edit-ticket' ><i class='fa fa-pencil'></i></a>";
                        },
                        "targets": 7
                    }]
            });
        }
    </script>
}

