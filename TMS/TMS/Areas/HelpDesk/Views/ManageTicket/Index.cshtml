                        <option value="@ConstantUtil.TicketMode.WebForm">@ConstantUtil.TicketModeString.WebForm</option>
                        <option value="@ConstantUtil.TicketMode.Email">@ConstantUtil.TicketModeString.Email</option>
                        <option value="@ConstantUtil.TicketMode.SocialNetwork">@ConstantUtil.TicketModeString.SocialNetwork</option>
                        <option value="@ConstantUtil.TicketMode.Forum">@ConstantUtil.TicketModeString.Forum</option>
                        <option value="@ConstantUtil.TicketMode.Other">@ConstantUtil.TicketModeString.Other</option>
                    </select>
                </div>
                <div class="filter_requester" data-role="filter_requester">
                    <h5>Requester</h5>
                    <select multiple="multiple" style="width: 250px;" data-role="filter_requester_select"></select>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-10">
        <div class="box box-solid">
            <div class="box-body" style="display: block;">
                <a class="btn bg-olive btn-flat" style="display: inline-block;" href='@Url.Action("CreateNewTicket", "ManageTicket")'>
                    <i class="fa fa-plus" aria-hidden="true"></i> New Ticket
                </a>
                <a class="btn bg-olive btn-flat margin-left10 disabled" style="display: inline-block;" data-role="btn-merge-ticket">
                    <i class="fa fa-compress" aria-hidden="true"></i> Merge
                </a>
