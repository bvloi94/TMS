@model IEnumerable<TMS.Models.Ticket>
@{
    Layout = "~/Areas/HelpDesk/Views/Shared/_Layout.cshtml";
    //ViewBag.Title = "Ticket Management";
}

@section SidebarMenu {
 
}

@section InitModal {

}

@section InitScript
{
    @Scripts.Render("~/bundles/helpdesk-manage-ticket")
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h4 class="box-title">Ticket Management</h4>
                
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table" id="ticket-table">
                    <thead>
                    <tr>
                        <th/>
                        <th>No</th>
                        <th>Subject</th>
                        <th>Requester</th>
                        <th>Assigned To</th>
                        <th>Department</th>
                        <th>Solved Date</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Options</th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <a class="btn bg-olive btn-flat" style="width: 135px;" href='@Url.Action("Create", "ManageTicket")' ">
                    Create New Ticket
                </a>
                <a class="btn bg-olive btn-flat" style="width: 100px;" data-role="btn-merge-ticket">
                    Merge
                </a>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->