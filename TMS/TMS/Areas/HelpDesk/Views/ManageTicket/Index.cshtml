<div class="row">
    <div class="col-xs-2">
        <div class="box box-solid">
            <div class="box-header">
                <h3 class="box-title">Filter Tickets</h3>
            </div>
            <div class="box-body ticket_filter" style="display: block;">
                <div class="filter_created_time" data-role="filter_created_time">
                    <h5>Created</h5>
                    <select data-role="filter_created_select">
                        <option value="0" default>Any time</option>
                        <option value="5">Within 5 minutes</option>
