                        <option value="720">Within 12 hours</option>
                        <option value="1440">Within 24 hours</option>
                        <option value="today">Today</option>
                        <option value="yesterday">Yesterday</option>
                        <option value="week">This Week</option>
                        <option value="last_week">Last 7 days</option>
                        <option value="month">This Month</option>
                        <option value="last_month">Last 30 days</option>
                        <option value="two_months">Last 60 days</option>
                        <option value="six_months">Last 180 days</option>
                        <option value="set_date">Select Time Period</option>
                    </select>
