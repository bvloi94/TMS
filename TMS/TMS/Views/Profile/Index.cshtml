@model TMS.ViewModels.ProfileRequesterViewModel
@{
    Layout = "~/Views/Shared/TMSRequesterLayout.cshtml";
    ViewBag.Title = "Profile";
}

<style>
    .profileAvatar {
        text-align: center;
    }

    .avatar {
        color: #808080;
        display: table;
        position: relative;
        background-color: #e8e8e8;
        min-height: 240px;
        min-width: 240px;
    }

    .profileInfo label {
        text-align: right;
    }

    .avatar i {
        font-size: 150px;
        display: table-cell;
        vertical-align: middle;
    }

    .inputform {
        padding: 20px;
    }
</style>
<div class="form-horizontal">
    <div class="row">
        <div class="col-xs-8">
            <div class="box box-primary">
                <div class="box-body large-text-container profileInfo">
                    <br />
                    <!--Username-->
                    <div class="form-group">
                        <label class="col-sm-offset-2 col-sm-3">Username</label>
                        <div class="col-sm-7">
                            @ViewBag.Username
                        </div>
                    </div>
                    <!--Email-->
                    <div class="form-group">
                        <label class="col-sm-offset-2 col-sm-3 ">Email</label>
                        <div class="col-sm-7">
                            @Model.Email
                        </div>
                    </div>
                    <!--Fullname-->
                    <div class="form-group">
                        <label class="col-sm-offset-2 col-sm-3">Fullname</label>
                        <div class="col-sm-7">
                            @Model.Fullname
                        </div>
                    </div>
                    <!--Adrress-->
                    <div class="form-group">
                        <label class="col-sm-offset-2 col-sm-3">Address</label>
                        <div class="col-sm-7">
                            @if (!string.IsNullOrWhiteSpace(Model.Address))
                            {
                            @Model.Address
                            }
                            else
                            { <span>-</span>}
                        </div>
                    </div>
                    <!--Phone-->
                    <div class="form-group">
                        <label class="col-sm-offset-2 col-sm-3">Phone</label>
                        <div class="col-sm-7">
                            @if (!string.IsNullOrWhiteSpace(Model.PhoneNumber))
                            {
                            <span>@Model.PhoneNumber</span>
                            }
                            else
                            {<span>-</span>}
                        </div>
                    </div>
                    <!--Birthday-->
                    <div class="form-group">
                        <label class="col-sm-offset-2 col-sm-3">Birthday</label>
                        <div class="col-sm-7">
                            @if (Model.Birthday.HasValue)
                            {
                            @Model.Birthday.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                            <span>-</span>
                            }
                        </div>
                    </div>
                    <!--Gender-->
                    <div class="form-group">
                        <label class="col-sm-offset-2 col-sm-3">Gender</label>
                        <div class="col-sm-7">
                            @if (Model.Gender.HasValue)
                            {
                                if (Model.Gender.Value)
                                {
                            <p>Male</p>
                                }
                                else
                                {
                            <p>Female</p>
                                }
                            }
                            else
                            {
                            <span>-</span>
                            }
                        </div>
                    </div>
                    <!--Job title-->
                    <div class="form-group">
                        <label class="col-sm-offset-2 col-sm-3">Job Title</label>
                        <div class="col-sm-7">
                            @if (!string.IsNullOrWhiteSpace(Model.JobTitle))
                            {
                            @Model.JobTitle
                            }
                            else
                            {
                            <span>-</span>
                            }
                        </div>
                    </div>
                    <!--Department-->
                    <div class="form-group">
                        <label class="col-sm-offset-2 col-sm-3">Department</label>
                        <div class="col-sm-7">
                            @if (!string.IsNullOrWhiteSpace(Model.DepartmentName))
                            {
                            @Model.DepartmentName;
                            }
                            else
                            {
                            <span>-</span>
                            }
                        </div>
                    </div>
                    <!--CompanyName-->
                    <div class="form-group">
                        <label class="col-sm-offset-2 col-sm-3">Company Name</label>
                        <div class="col-sm-7">
                            @if (!string.IsNullOrWhiteSpace(Model.CompanyName))
                            {
                            @Model.CompanyName;
                            }
                            else
                            {
                            <span>-</span>
                            }
                        </div>
                    </div>
                    <!--CompanyAddress-->
                    <div class="form-group">
                        <label class="col-sm-offset-2 col-sm-3">Company Address</label>
                        <div class="col-sm-7">
                            @if (!string.IsNullOrWhiteSpace(Model.CompanyAddress))
                            {
                            @Model.CompanyAddress;
                            }
                            else
                            {
                            <span>-</span>
                            }
                        </div>
                    </div>
                    <!--Btn Update profile-->
                    <div class="form-group">
                        <div class="col-xs-offset-4 col-xs-8">
                            @Html.ActionLink("Update Profile", "UpdateProfile", null, new { @class = "btn btn-success" })
                            @Html.ActionLink("Change Password", "ChangePassword", new { area = "" }, new { @class = "btn btn-success" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="box box-primary">
                <div class="box-body" style="text-align: center">
                    <span class="lead"><strong>Avatar</strong></span>
                    <br />
                    <img src="@ViewBag.AvatarURL" class="profile-avatar" alt="Avatar Image" id="avatar-img" />
                </div>
            </div>
        </div>
    </div>
</div>


