@{
    Layout = "~/Views/Shared/TMSRequesterLayout.cshtml";
}
@{
    ViewBag.Title = "Edit Profile";
}

<style>
    .profileAvatar {
        text-align: center;
    }
    
    .avatar {
        color: #808080;
        display: table;
        position: relative;
        background-color: #e8e8e8;
        min-height: 240px;
        min-width: 240px;
    }

        .avatar i {
            font-size: 150px;
            display: table-cell;
            vertical-align: middle;
        }

    .inputform {
        padding: 20px;
    }
</style>

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-body">
                <div class="form-horizontal inputform">
                    <div class="col-md-3 profileAvatar">
                        <div class="avatar">
                            <i class="fa fa-user fa-5x" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="control-label col-md-3">Username</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" value="thynh1610@gmail.com" readonly="readonly" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Email</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" value="thynh1610@gmail.com" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Fullname</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" value="Nguyen Hoang Thy" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Address</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" value="Quan 3 Thanh pho Ho Chi Minh" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Phone</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" value="0987654321" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Birthday</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" value="16/10/1994" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Gender</label>
                            <div class="col-md-5">
                                <select class="form-control">
                                    <option value="Male">Male</option>
                                    <option value="Female" selected="selected">Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Job title</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" value="Student" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Department</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" value="Software Engineer" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Company name</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" value="FPT University" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Company address</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" value="To Ky Quan 12 TPHCM" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-5">
                                <a class="btn btn-primary" href="#">Update</a>
                                <a class="btn btn-default" href="@(Url.Action("Index", "Profile"))">Cancel</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
