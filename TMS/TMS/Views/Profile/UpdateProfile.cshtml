@model TMS.ViewModels.ProfileRequesterViewModel
@{
    Layout = "~/Views/Shared/_TopLayout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/custom-css/profile.css">
<style>
    #profile .row {
        padding: 8px 0px 1px 0px;
        border-bottom: none;
    }

    .btn {
        margin-left: 8px;
        width: 70px;
    }

    input, select {
        color: #ffffff !important;
        background: transparent !important;
        border: solid 1px #ffffff !important;
    }
    
        input:-webkit-autofill {
            -webkit-text-fill-color: #ffffff !important;
            transition: background-color 5000s ease-in-out 0s;
        }

    #select-gender option {
        color: #ffffff !important;
        background-color: #46ce8f !important;
        border: solid 1px #ffffff !important;
    }
</style>

@using (Html.BeginForm("EditProfile", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row" style="padding-top: 15px">
        <div class="col-sm-5 text-center">
            <div class="row"><img src="@ViewBag.AvatarURL" class="img-circle" alt="Avatar Image" id="avatar-img" /></div>
            <div class="row text-center" style="padding-top: 20px">
                <div class="col-sm-offset-3 col-sm-7">
                    <input style="border: none !important" type="file" id="Avatar" name="Avatar" accept="image/gif, image/jpeg, image/png" onchange="readURL(this);" />
                    @Html.ValidationMessageFor(m => m.Avatar, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-sm-7" id="profile">
            <div class="row">
                <div class="col-md-3 col-sm-4 profile-label"><span>Username</span></div>
                <div class="col-md-9 col-sm-8">
                    <input type="text" class="form-control" disabled="disabled" value="@ViewBag.Username" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-4 profile-label"><span>Email</span></div>
                <div class="col-md-9 col-sm-8">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-4 profile-label"><span>Fullname</span></div>
                <div class="col-md-9 col-sm-8">
                    @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Fullname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-4 profile-label"><span>Address</span></div>
                <div class="col-md-9 col-sm-8">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-4 profile-label"><span>Phone Number</span></div>
                <div class="col-md-9 col-sm-8">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-4 profile-label"><span>Birthday</span></div>
                <div class="col-md-9 col-sm-8">
                    @Html.TextBoxFor(m => m.Birthday, "{0:dd/MM/yyyy}", new { @class = "form-control datetime" })
                    @Html.ValidationMessageFor(m => m.Birthday, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-4 profile-label"><span>Gender</span></div>
                <div class="col-md-9 col-sm-8">
                    @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>{
                                    new SelectListItem{ Text = "Male", Value = "true"},
                                    new SelectListItem{ Text = "Female", Value = "false"}
                                }, "--Choose gender--", new { @class = "form-control", id = "select-gender" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-4 profile-label"><span>Job Title</span></div>
                <div class="col-md-9 col-sm-8">
                    @Html.TextBoxFor(m => m.JobTitle, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.JobTitle, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-4 profile-label"><span>Department</span></div>
                <div class="col-md-9 col-sm-8">
                    @Html.TextBoxFor(m => m.DepartmentName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.DepartmentName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-4 profile-label"><span>Company Name</span></div>
                <div class="col-md-9 col-sm-8">
                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row" style="border-bottom: none;">
                <div class="col-md-3 col-sm-4 profile-label"><span>Comapany Address</span></div>
                <div class="col-md-9 col-sm-8">
                    @Html.TextBoxFor(m => m.CompanyAddress, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CompanyAddress, "", new { @class = "text-danger" })
                    <div class="row text-center" style="margin-top: 5px">
                        <input type="submit" class="btn btn-transparent btn-flat" value="Save" />
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-transparent btn-flat" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

