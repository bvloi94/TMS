@model TMS.Models.RequesterRegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("CreateRequester", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <p>Username</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p>Password</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p>Email</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p>Fullname</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p>Birthday</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Birthday, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p>Address</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p>Gender</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p>Department Name</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DepartmentName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p>Job Title</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.JobTitle, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p>Company Name</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p>Company Address</p>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CompanyAddress, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
